# Environment Variables

# Server
PORT=3001
NODE_ENV=development

# URLs
DASHBOARD_URL=http://localhost:5174
ADMIN_URL=http://localhost:5175

# Supabase (Service Role - Full Access)
SUPABASE_URL=your_supabase_url_here
SUPABASE_SERVICE_KEY=your_service_key_here

# Appy Pay
# Appy Pay
# Production: https://gwy-api.appypay.co.ao/v2.0
# Test: https://gwy-api-tst.appypay.co.ao/v2.0
APPYPAY_BASE_URL=https://gwy-api.appypay.co.ao/v2.0
APPYPAY_CLIENT_ID=your_client_id_here
APPYPAY_CLIENT_SECRET=your_client_secret_here
APPYPAY_RESOURCE= # Optional
APPYPAY_GPO_METHOD_ID=your_gpo_method_id_here
APPYPAY_REF_METHOD_ID=your_ref_method_id_here
APPYPAY_WEBHOOK_SECRET=your_webhook_secret_here

# Mux
MUX_TOKEN_ID=your_mux_token_id_here
MUX_TOKEN_SECRET=your_mux_token_secret_here
MUX_WEBHOOK_SECRET=your_mux_webhook_secret_here
MUX_SIGNING_KEY=your_mux_signing_key_here
MUX_PRIVATE_KEY="-----BEGIN RSA PRIVATE KEY-----\nyour_private_key_here\n-----END RSA PRIVATE KEY-----"

# Brevo
BREVO_API_KEY=your_brevo_api_key_here
BREVO_SENDER_EMAIL=noreply@vibecoding.com
BREVO_SENDER_NAME=Vibe Coding
